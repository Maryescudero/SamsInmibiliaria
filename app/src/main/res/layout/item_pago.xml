<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="410dp"
    android:layout_margin="@dimen/cardview_default_radius"
    android:background="@drawable/propiedad"
    android:padding="@dimen/cardview_default_radius"
    app:cardBackgroundColor="#9A9A9A"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    app:contentPadding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="313dp">

        <TextView
            android:id="@+id/numero_pago"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginTop="8dp"
            android:text="Número de pago"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@id/PrecioPago"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/PrecioPago"
            app:layout_constraintTop_toBottomOf="@+id/PrecioPago" />

        <ImageView
            android:id="@+id/imagenPago"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/loading"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/DireccionPago"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginTop="16dp"
            android:text="Dirección"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@id/imagenPago"
            app:layout_constraintStart_toStartOf="@id/imagenPago"
            app:layout_constraintTop_toBottomOf="@id/imagenPago" />

        <TextView
            android:id="@+id/PrecioPago"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginTop="8dp"
            android:text="Precio"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@id/DireccionPago"
            app:layout_constraintStart_toStartOf="@id/DireccionPago"
            app:layout_constraintTop_toBottomOf="@id/DireccionPago" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
